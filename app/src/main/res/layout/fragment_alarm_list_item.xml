    <TextView
        android:id="@+id/txtAlarmName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:paddingBottom="16dp"
        android:text="YogAlarm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--
    <TextView
        android:id="@+id/txtAlarmConfig"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="[ 5m x 3 ]"
        app:layout_constraintBaseline_toBaselineOf="@id/txtAlarmName"
        app:layout_constraintEnd_toStartOf="@id/txtRepsLeft" />
    -->

    <ImageView
        android:id="@+id/ivStopWhenDone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_infinity"
        app:layout_constraintEnd_toStartOf="@id/txtReps"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtReps"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="X: 3/3"
        app:layout_constraintBaseline_toBaselineOf="@id/txtAlarmName"
        app:layout_constraintEnd_toStartOf="@id/txtTime" />

    <TextView
        android:id="@+id/txtTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="+00:07:24"
        app:layout_constraintBaseline_toBaselineOf="@id/txtAlarmName"
        app:layout_constraintEnd_toStartOf="@id/chkEnabled" />

    <!--
    <Switch
        android:id="@+id/swEnabled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:checked="false"
        app:layout_constraintBaseline_toBaselineOf="@id/txtAlarmName"
        app:layout_constraintEnd_toEndOf="parent"
        />
        -->

    <CheckBox
        android:id="@+id/chkEnabled"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:checked="false"
        app:layout_constraintBaseline_toBaselineOf="@id/txtAlarmName"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
